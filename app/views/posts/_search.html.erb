 <%= form_tag('/', method: :get) do %>
  <div class="row search-form">
      <div class="form-group col-2">
        <% list_type = format_list(lists) %>
        <%= label_tag 'List Type' %>
        <%= select_tag "type", options_for_select(list_type, list_type), class: 'form-control', include_blank: 'All' %>
      </div>

      <div class="form-group col-2">
        <%= label_tag 'Social Network' %>
        <%= select_tag "social_media", options_for_select(["Facebook", "Twitter" ], ""), class: 'form-control', include_blank: 'All' %>
      </div>
    
      <div class="form-group col-3 date-range">
        <label for="example-date-input" class="col-2 col-form-label">From</label>
        <div class="col-12">
          <%= date_field "date", "from", class: 'form-control', value: '2019-02-01' %>
        </div>
      </div>

      <div class="form-group col-3 date-range">
        <label for="example-date-input" class="col-2 col-form-label">To</label>
        <div class="col-12">
          <%= date_field "date", "to", class: 'form-control', value: '2025-02-01' %>
        </div>
      </div>

      <div class="form-group col-2">
        <%= label_tag 'search', nil, class: 'invisible' %>
        <%= submit_tag "Search", class: "btn btn-primary form-control search-btn" %>
      </div>
    </div>
<% end %>